<style>
    .titles{
        font-family: sans-serif;
        font-weight: bold;
        color: #3d3d3d;
    }
</style>
<div class="container container-fluid">

<div class="col-xs-6">
    <p class="titles">public class Test{</p>

    <form>
        <i>//Attribute Declarations</i><br>
        <textarea name="attributes" placeholder="Add your attribute declarations here" rows="2" cols="50">
int age;
String name;
        </textarea><br>
        <i>//Constructors</i><br>
        <textarea name="constructors" placeholder="Add your constructors here" rows="7" cols="50">
public Test(int age, String name){
    this.age = age;
    this.name = name;
}
private Test(int age){
    this.age = age;
}
        </textarea><br>
        <i>//Functions</i><br>
        <textarea name="functions" placeholder="Add your functions here" rows="7" cols="50">
public int getAge(){
    return this.age;
}
public static String getName(){
    return this.name;
}
        </textarea><br>
        <p class="titles">public static void main(String[] args){</p>
        <textarea name="main" placeholder="This is your playground, test around here" rows="3" cols="50">
int x = 1;
int y = 2;
Test test = new Test(x,y);
        </textarea><br>
        <p class="titles">}<br>
        }</p>
        <input id="submit" class="btn btn-danger" value="Submit" />
    </form>
</div>

    <div class="col-xs-6">
        <div id="attributes" class="row center text-center">
            <p><h3>Attributes</h3></p>
        </div>
        <hr>

        <div id="constructors" class="row center text-center">
            <p><h3>Constructors</h3></p>
            <p class="constructor-name">Test</p>
        </div>
        <hr>

        <div id="functions" class="row center text-center">
            <p>
                <h3>Functions</h3>
            </p>
            {{#each functions}}
                <div class="col-xs-4 function text-left">
                    <span class="function-label">Name:</span> <span class="function-name">{{this.name}}</span><br>
                    <span class="function-label">Static:</span> <span class="function-name">{{this.static}}</span><br>
                    <span class="function-label">Returns:</span> <span class="function-name">{{this.returnType}}</span><br>
                    <span class="function-label">Access:</span> <span class="function-name">{{this.access}}</span><br>
                </div>
            {{/each}}
        </div>
        <hr>

        <div id="variables" class="row center text-center">
            <h3>Variables</h3>
            {{#each _main.variables}}
            <div class="row">
                <p>{{this.name}}</p>
                <p style="font-size:130%;color:red;">{{this.type}}</p>
                <div class="ldBar" data-min="0" data-max="10" data-value={{this.value}}></div>
            </div>
            {{/each}}
        </div>

        <button id="next" class="btn btn-success"><i class="fas fa-arrow-right"></i></button>
    <p>{{ error }}</p>
    </div>
</div>